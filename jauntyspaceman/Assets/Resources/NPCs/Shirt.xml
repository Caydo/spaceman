<npc name="Shirt">
<spriteset file="Male.png"/>
<dialog>
<point id="0" text="What color is this shirt?">
<response key="G" text="Red." trigger="Go To 1"/>
<response key="R" text="Green." trigger="Go To 2"/>
<response key="ESC" text="I'm colorblind." trigger="Go To 3"/>
<response key="(timeout)" text="" trigger="Go To 3"/>
</point>
<point id="1" text="Can't put anything past you!" trigger="Give 0.1 O2, EndDialog">
</point>
<point id="2" text="You should pay more attention!" trigger="Take 0.1 O2, EndDialog">
</point>
<point id="3" text="Nevermind." trigger="EndDialog">
</point>
</dialog>
</npc>
